{
  "name": "logux-ngrx",
  "version": "0.0.0",
  "description": "NgRx compatible API for Logux",
  "keywords": [
    "logux",
    "client",
    "angular",
    "ngrx"
  ],
  "scripts": {
    "test": "jest-ci --coverage && eslint-ci . && check-dts && size-limit && yarn spell",
    "spell": "yaspeller-ci *.md",
    "clean": "rimraf coverage/"
  },
  "author": "Nikolay Govorov <nikolay_govorov@bk.ru>",
  "license": "MIT",
  "homepage": "https://logux.io/",
  "repository": "nikolay-govorov/logux-ngrx",
  "sideEffects": false,
  "devDependencies": {
    "@logux/eslint-config": "^36.1.1",
    "@logux/sharec-config": "^0.6.2",
    "@size-limit/dual-publish": "^4.3.1",
    "@size-limit/preset-small-lib": "^4.3.1",
    "check-dts": "^0.1.3",
    "dual-publish": "^0.5.1",
    "eslint": "^6.8.0",
    "eslint-ci": "^1.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prefer-let": "^1.0.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-unicorn": "^17.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "jest-ci": "^0.1.1",
    "lint-staged": "^10.0.8",
    "rimraf": "^3.0.2",
    "size-limit": "^4.3.1",
    "yaspeller-ci": "^1.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "yaspeller",
    "*.js": "eslint"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    }
  },
  "eslintConfig": {
    "extends": "@logux/eslint-config"
  },
  "yaspeller": {
    "lang": "en",
    "ignoreCapitalization": true,
    "ignoreText": [
      " \\(by [^)]+\\)."
    ]
  },
  "sharec": {
    "config": "@logux/sharec-config",
    "version": "0.6.2"
  }
}
